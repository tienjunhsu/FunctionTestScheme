<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#ff6000" />
            <solid android:color="#ff6000"/>
            <corners android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp" android:topLeftRadius="1dp" android:topRightRadius="1dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#b3b4bb" />
            <solid android:color="#b3b4bb"/>
            <corners android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp" android:topLeftRadius="1dp" android:topRightRadius="1dp" />
        </shape></item>

</selector>